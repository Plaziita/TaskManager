
@page
@model LoginModel
@{
    
    Layout = null;
    ViewData["Title"] = "Login";
}
<!DOCTYPE html>

<html class="dark" lang="en"><head>
<meta charset="utf-8"/>
<meta content="width=device-width, initial-scale=1.0" name="viewport"/>
<title>TaskManager - Login</title>
<script src="https://cdn.tailwindcss.com?plugins=forms,container-queries"></script>
<link href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:wght,FILL@100..700,0..1&amp;display=swap" rel="stylesheet"/>
<link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&amp;display=swap" rel="stylesheet"/>
<link href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:wght,FILL@100..700,0..1&amp;display=swap" rel="stylesheet"/>
<script id="tailwind-config">
        tailwind.config = {
            darkMode: "class",
            theme: {
                extend: {
                    colors: {
                        "primary": "#0d6cf2",
                        "background-light": "#f4f5f7",
                        "background-dark": "#101722",
                    },
                    fontFamily: {
                        "display": ["Inter", "sans-serif"]
                    },
                    borderRadius: {
                        "DEFAULT": "0.25rem",
                        "lg": "0.5rem",
                        "xl": "0.75rem",
                        "full": "9999px"
                    },
                },
            },
        }
    </script>
<style>
        body { font-family: 'Inter', sans-serif; }
        .material-symbols-outlined { font-variation-settings: 'FILL' 0, 'wght' 400, 'GRAD' 0, 'opsz' 24; }
        .active-nav { background-color: #282e39; border-left: 3px solid #135bec; }
    </style>
</head>
<body class="bg-background-light dark:bg-background-dark min-h-screen flex flex-col font-display dark:text-white">
<header class="flex items-center justify-center pt-12 pb-8">
<div class="flex items-center gap-1 text-[#0d131c] dark:text-white">
<div class="size-8 text-primary">
<svg fill="currentColor" viewbox="0 0 48 48" xmlns="http://www.w3.org/2000/svg">
<path d="M6 6H42L36 24L42 42H6L12 24L6 6Z"></path>
</svg>
</div>
<h2 class="text-2xl font-bold leading-tight tracking-tight">TaskManager</h2>
</div>
</header>
<main class="flex-1 flex flex-col items-center px-4">
<div class="w-full max-w-[400px] dark:bg-slate-900 border border-slate-200 dark:border-slate-800 p-8 rounded-xl hover:border-primary transition-all group">
<div class="text-center mb-8">
<h1 class="text-[#0d131c] dark:text-white text-xl font-bold leading-tight mb-2">Log in to your account</h1>
<p class="text-slate-500 dark:text-slate-400 text-sm">Welcome back! Please enter your details.</p>
</div>
<form method="post" class="space-y-4">
        <input type="hidden" asp-for="ReturnUrl" />
<div class="flex flex-col gap-1.5">
<label asp-for="Input.Email" class="text-slate-700 dark:text-slate-300 text-sm font-semibold">Email address</label>
<input asp-for="Input.Email" class="flex w-full rounded-lg text-[#0d131c] dark:text-white focus:outline-0 focus:ring-2 focus:ring-primary/50 border border-[#ced9e8] dark:border-slate-700 dark:bg-slate-900 h-11 placeholder:text-[#496c9c] dark:placeholder:text-slate-500 px-4 text-sm font-normal transition-all" placeholder="example@example.com" type="email"/>
<span asp-validation-for="Input.Email" class="text-red-400 text-sm"></span>
</div>
<div class="flex flex-col gap-1.5">
<div class="flex justify-between items-center">
<label asp-for="Input.Password" class="text-slate-700 dark:text-slate-300 text-sm font-semibold">Password</label>
</div>
<input asp-for="Input.Password" class="flex w-full rounded-lg text-[#0d131c] dark:text-white focus:outline-0 focus:ring-2 focus:ring-primary/50 border border-[#ced9e8] dark:border-slate-700 dark:bg-slate-900 h-11 placeholder:text-[#496c9c] dark:placeholder:text-slate-500 px-4 text-sm font-normal transition-all" placeholder="Enter your password" type="password"/>
<span asp-validation-for="Input.Password" class="text-red-400 text-sm"></span>
</div>
<div class="pt-2">
<button class="w-full cursor-pointer items-center justify-center rounded-lg h-11 bg-primary hover:bg-primary/90 text-white text-sm font-bold transition-colors" type="submit">
                        Log in
                    </button>
</div>
</form>
<div class="mt-6 flex flex-col items-center gap-3">
<div class="flex items-center gap-1.5 text-sm text-slate-600 dark:text-slate-400">
<span>Don't have an account?</span>
<a class="text-primary hover:underline font-medium" href="/Register/Register">Create an account</a>
</div>
</div>
<div class="relative my-8 text-center">
<div class="absolute inset-0 flex items-center">
<span class="w-full border-t border-slate-200 dark:border-slate-800"></span>
</div>
<span class="relative dark:bg-[#1c2533] px-4 text-xs font-semibold text-slate-400 uppercase tracking-widest">OR</span>
</div>
<div class="space-y-3">
<button class="flex w-full items-center justify-center gap-3 rounded-lg h-11 border border-slate-200 dark:border-slate-700 dark:bg-slate-900 text-slate-700 dark:text-slate-300 text-sm font-semibold hover:bg-slate-50 dark:hover:bg-slate-800 transition-colors">
<img alt="" class="w-5 h-5" data-alt="Google colorful G logo icon" src="https://lh3.googleusercontent.com/aida-public/AB6AXuDp6Z-TFHlGzpE3_MWsZtIjLLrChOGpGCPHfKK9Ni4296qhaRo2PPQss4n5bkqlSbLMRTJw-DHHXRcCY4HReyx48gB9FJeiDEVRaeHaIRc5JaeWR49rYBFAYgyNij1YNjfGVWVq1cd32wu029wjChxlIUGTMoSN_QFv43LMaqIRx6zTTC2yxmS_1b1POBW3su8yUeh2qxR8zbnADtsZXlLDWMWdydiJNnMBn_fBTs-aH8Bwj2MArepDFuc9L_3ChYKNS-tIS_2jdHYG"/>
<span>Continue with Google</span>
</button>
</div>
</div>
<footer class="mt-12 mb-8 text-center">
<div class="flex items-center justify-center gap-6 text-xs text-slate-500 dark:text-slate-500 font-medium">
<a class="hover:text-primary" href="#">Privacy Policy</a>
<a class="hover:text-primary" href="#">Terms of Service</a>
<a class="hover:text-primary" href="#">Help Center</a>
</div>
<p class="mt-4 text-[11px] text-slate-400 dark:text-slate-600">Â© 2026 TaskManager. All rights reserved.</p>
</footer>
</main>
</body></html>