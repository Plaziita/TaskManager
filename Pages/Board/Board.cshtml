@page
@using Microsoft.AspNetCore.Authorization
@attribute [Authorize]
@model TaskManager.Pages.BoardModel
@{
    Layout = "_Layout";
    ViewData["Title"] = "Board";
}

<div class="flex flex-col h-screen overflow-hidden">

    <div class="border-b border-slate-200 dark:border-slate-800 dark:bg-background-dark/50">
        <div class="flex flex-wrap items-end justify-between gap-3 px-8 py-4">
            <div>
                <h1 class="text-3xl font-black tracking-tight text-slate-900 dark:text-white">Task Board</h1>
                <p class="text-slate-500 dark:text-slate-400 mt-1">
                    All your issues in one place
                </p>
            </div>

            <div class="text-sm text-slate-500 dark:text-slate-400">
                Total: <strong>@Model.TotalTasks</strong>
            </div>
        </div>
    </div>

    <main class="flex-1 overflow-x-auto overflow-y-hidden p-6">
        <div class="flex gap-6 h-full min-w-max">

            @foreach (var col in BoardModel.Columns)
            {
                var items = Model.TasksByStatus[col];
                var count = Model.CountByStatus[col];

                <div class="flex flex-col w-72 shrink-0">

                    <div class="flex items-center justify-between mb-4 px-1">
                        <div class="flex items-center gap-2">
                            <h3 class="text-xs font-bold uppercase tracking-wider text-slate-500 dark:text-slate-400">@col</h3>
                            <span class="bg-slate-200 dark:bg-slate-800 text-slate-600 dark:text-slate-300 text-[10px] font-bold px-1.5 py-0.5 rounded">
                                @count
                            </span>
                        </div>
                    </div>

                    <div class="flex flex-col gap-3 overflow-y-auto pb-4 @(col == "Done" ? "opacity-70 hover:opacity-100 transition-opacity" : "")">

                        @if (!items.Any())
                        {
                            <div class="text-xs text-slate-400 border border-dashed border-slate-300 dark:border-slate-800 rounded p-3">
                                No tasks in @col.
                            </div>
                        }
                        else
                        {
                            @foreach (var t in items)
                            {
                                <div class="group dark:bg-slate-900 border border-slate-200 dark:border-slate-800 rounded-lg p-3 shadow-sm hover:border-primary/50 cursor-pointer transition-all"
                                    onclick="location.href='@Url.Page("/MyTask/MyTask", new { id = t.Id })'">

                                    <div class="flex justify-between items-start mb-2">
                                        <span class="bg-primary/10 text-primary text-[10px] font-bold px-1.5 py-0.5 rounded uppercase">
                                            @t.Project?.Name
                                        </span>

                                        <span class="material-symbols-outlined text-slate-400 text-[18px]">
                                            priority_high
                                        </span>
                                    </div>

                                    <p class="text-sm font-medium dark:text-slate-100 mb-3 line-clamp-2 leading-snug">
                                        @t.Title
                                    </p>

                                    <div class="flex items-center justify-between">
                                        <div class="text-[11px] uppercase text-slate-500 font-semibold">
                                            @t.ProjectId-@t.Id
                                        </div>
                                    </div>
                                </div>
                            }
                        }
                    </div>

                </div>
            }

        </div>
    </main>

</div>